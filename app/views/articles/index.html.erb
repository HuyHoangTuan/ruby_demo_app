<h1>Articles</h1>
<div>
    <%= link_to "New Article", new_article_path %>
</div>
<div>
    <ul>
        <% @articles.each do |article| %>
            <li>
                <div>
                    <%= link_to article.title, article %>: <%= article.body %>. <%= link_to "Edit", edit_article_path(article) %>
                </div>
            </li>
        <% end %>
    </ul>
</div>


